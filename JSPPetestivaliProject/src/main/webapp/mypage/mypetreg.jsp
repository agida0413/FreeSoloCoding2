</head>
<body>

    <!-- Checkout Section Begin -->
    <section class="checkout spad">
        <div class="container">
            <div class="checkout__form">
                <h4>Billing Details</h4>
                <form action="#">
                    <div class="row">
                        <div class="col-lg-8 col-md-6">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        <p>이름<span>*</span></p>
                                        <input type="text">
                                    </div>
                                </div>
                            </div>
                             <div class="col-lg-6">
                            <div class="checkout__input">
                                <p>생년월일<span>*</span></p>
                                <input type="text" placeholder="반려동물의 생년월일을 입력하세요">
                            </div>
                            </div>
                           <div class="row">
                            <label for="acc">
                            <p>성별<span>*</span></p>
                               
                              <input type="checkbox" id="diff-acc">
                              남아
                              <span class="checkmark"></span>
                             
                              <input type="checkbox" id="diff-acc">
                               &nbsp;
                              여아
                              <span class="checkmark"></span>
                              </label>
                           </div>
                           <div class="row">
                            <label for="acc">
                              <input type="checkbox" id="diff-acc">
                              중성화여부
                              <span class="checkmark"></span>
                              </label>
                           </div>
                            <div class="checkout__input">
                                <p>몸무게<span>*</span></p>
                                <input type="text">
                            </div>
                            <button type="submit" class="site-btn">제출하기</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
    <!-- Checkout Section End -->

    <!-- Js Plugins -->
    <script src="../js/jquery-3.3.1.min.js"></script>
    <script src="../js/bootstrap.min.js"></script>
    <script src="../js/jquery.nice-select.min.js"></script>
